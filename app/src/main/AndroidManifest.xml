<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DragAndDropActivity"></activity>
        <activity android:name=".BroadcastReceiverActivity" />
        <activity android:name=".ServicesActivity" />
        <activity android:name=".IntentServiceActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".SharedPreferencesActivity" />
        <activity android:name=".SlideAbleMenuActivity" />
        <activity android:name=".TabLayoutActivity" />
        <activity android:name=".SwipeViewActivity" />
        <activity android:name=".NavigationActivity" />
        <activity android:name=".FragmentActivity" />
        <activity android:name=".RecyclerActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".AlertDialogActivity" />
        <activity android:name=".ToolbarMenuActivity" />
        <activity android:name=".AttendanceActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".classes.MyIntentService" />
        <service android:name=".classes.MyService" />
    </application>

</manifest>